<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="students-data-section">
        <h1>
            Welcome to Coding Ninjas CareerTrack <%= title%>
        </h1>
        <br>
        <br>
        <% if (locals.user) { %>
            <div id="students-data-form-container">
                <h2> Hi <%= user.name %>, add students data from here</h2>
                <form action="/students/create" method="post">
                    <h3>Student Details Form</h3>
                    
                    <label for="batch">Batch:</label>
                    <input type="text" id="batch" name="batch" required>
                    
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>

                    <br>

                    <label for="college">College:</label>
                    <input type="text" id="college" name="college" required>
                    
                    <label for="status">Status:</label>
                    <select id="status" name="status" required>
                      <option value="Placed">Placed</option>
                      <option value="Not_placed">Not Placed</option>
                    </select>
                    
                    <h3>Skill-test Scores</h3>
                    
                    <label for="dsa_score">DSA Final Score:</label>
                    <input type="number" id="dsa_score" name="dsa_score" min="0" max="100" required>
                    
                    <label for="webd_score">WebD Final Score:</label>
                    <input type="number" id="webd_score" name="webd_score" min="0" max="100" required>
                    
                    <label for="react_score">React Final Score:</label>
                    <input type="number" id="react_score" name="react_score" min="0" max="100" required>                    
                    <br>
                    <br>
                    <input type="submit" value="Submit">
                  </form>                  
            </div>
            <%}else{%>
                <strong>Please Sign-in or Sign-up to add students data</strong>
            <%}%>
            <div>
                <h2>Students Data</h2>
                <ul>
                    <% for ( student of students) { %>

                        <%- include('_student');%>

                    <%}%>
                    
                </ul>
            </div>
            <%if(locals.user) {%>
            <div id="download-button-div">       
                    <a href="/students/download" id="download-button">Download the data here</a>    
            </div>
            <%}%>
    </section>
    <section id="jobs-from-api">
        <h3>
            Available Jobs in India
        </h3>

    </section>


</div>
<script src="/js/home.js"></script>